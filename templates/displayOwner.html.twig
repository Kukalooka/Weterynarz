<h1 class="h1">Klienci</h1>

<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Last Name</th>
        <th>Details</th>
    </tr>

    {% set ownerNum = 0 %}

    {% for owner in owners %}
        <tr>
            <td>{{ ownerNum }}</td>
            <td>{{ owner.name }}</td>
            <td>{{ owner.lastName }}</td>
            <td><a href="/owner/{{ ownerNum }}" class="btn btn-outline-info">More</a></td>
        </tr>
        {% set ownerNum = ownerNum + 1 %}
    {% endfor %}
</table>