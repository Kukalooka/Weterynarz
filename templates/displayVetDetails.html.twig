<h1 class="h1">Weterynarz</h1>
<h2 class="display-5">{{ vetName }}</h2>

<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Species</th>
        <th>Age</th>
        <th>Owner</th>
    </tr>

    {% set aniNum = 0 %}

    {% for animal in animals %}
        <tr>
            <td>{{ aniNum }}</td>
            <td>{{ animal.name }}</td>
            <td>{{ animal.species }}</td>
            <td>{{ animal.age }}</td>
            <td>{{ animal.owner }}</td>
        </tr>
        {% set aniNum = aniNum + 1 %}
    {% endfor %}
</table>


    

<table class="table table-striped">
    <tr>
        <th>Date</th>
        <th>Vet</th>
        <th>Animal</th>
    </tr>

    {% for visit in visits %}
        <tr>
            <td>{{ visit.date }}</td>
            <td>{{ visit.vet }}</td>
            <td>{{ visit.animal }}</td>
        </tr>
    {% endfor %}
</table>